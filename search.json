---
layout: null
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape | smartify }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "url"      : "{{ post.url | relative_url }}",
      "date"     : "{{ post.date | date: '%d de %B de %Y' }}",
      "content"  : {{ post.content | strip_html | strip_newlines | jsonify }}
    }
    {% unless forloop.last %},{% endunless %}
  {% endfor %}
]