# frozen_string_literal: true
source "https://rubygems.org"

# Define a versão do Jekyll
# A versão ~> 4.3 é uma escolha moderna e estável
gem "jekyll", "~> 4.3.3"

# Adicione aqui quaisquer outros plugins do Jekyll que você queira usar.
# Para o nosso caso, vamos adicionar o plugin que cria arquivos de categoria/tag.
gem "jekyll-archives"

# Plugins que são úteis e geralmente suportados pelo GitHub Pages
group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.17.0"
  gem "jekyll-seo-tag", "~> 2.8.0"
end